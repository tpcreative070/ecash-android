<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       android:gravity="center"
       >
      <TextView
          android:id="@+id/tv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_xlarge"
          android:textColor="@color/black_two"
          android:text="@string/str_you_have_successfully_qr_press_arrow_to_view_other_qr"
          android:gravity="center"
          />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginTop="30dp"
           android:layout_height="230dp">
           <ImageView
               android:id="@+id/iv_left"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_icon_back"
               android:layout_centerVertical="true"
               android:layout_marginStart="10dp"
               android:contentDescription="@string/string_todo"
               />
           <androidx.viewpager.widget.ViewPager
               android:id="@+id/view_pager"
               android:layout_width="230dp"
               android:layout_centerInParent="true"
               android:layout_height="230dp"/>
           <ImageView
               android:id="@+id/iv_right"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_icon_next"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="10dp"
               android:contentDescription="@string/string_todo" />
       </RelativeLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_xlarge"
          android:textColor="@color/black_two"
          android:text="@string/str_scan_qr_to_receive_money"
          android:gravity="center"
          android:layout_marginTop="10dp"
          />
   </LinearLayout>
   <include layout="@layout/view_share_save_qr_code"
       android:layout_alignParentBottom="true"
       android:layout_height="50dp"
       android:layout_width="wrap_content" />
</RelativeLayout>
