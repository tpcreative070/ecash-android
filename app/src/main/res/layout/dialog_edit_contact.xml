<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:gravity="left"
    android:background="@drawable/bg_border_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/str_wallet_number"
        android:textSize="@dimen/text_small"
        android:layout_gravity="left"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_wallet_id"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="@string/str_full_name"
        android:textSize="@dimen/text_small"
        android:layout_gravity="left"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@drawable/bg_edit_text"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="@string/str_phone_number"
        android:layout_gravity="left"
        android:textSize="@dimen/text_small"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_normal"
        android:layout_gravity="left"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="@string/str_mobile_info"
        android:layout_gravity="left"
        android:textSize="@dimen/text_small"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_mobile_info"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/gray"
        android:layout_gravity="left"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_rectangle_blue"
        android:text="@string/str_update"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>