<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_500"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="500.000VNÄ"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/tv_sl_value"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_value"
        android:text="20"
        android:gravity="center"
        android:background="@drawable/bg_circle_blue_border"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_blue_rectangle_boder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:src="@drawable/ic_minus_blue" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:textColor="@color/black_two"
            android:textSize="@dimen/text_xlarge"
             />

        <ImageView
            android:id="@+id/iv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:src="@drawable/ic_plus_blue" />

    </LinearLayout>
</RelativeLayout>