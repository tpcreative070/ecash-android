<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_light"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/toolbar_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/str_take_cash"
            android:textAppearance="@style/TextAppearance.Title"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_header"
            android:textStyle="normal" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/gray_light"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_item_transfer"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/str_take_cash"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/text_small"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tv_total_money_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="+ 200.000 VNÄ"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_header"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/str_cash_take_success"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/text_large"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="@string/str_cash_take_info"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xlarge"
                android:background="@color/gray_light"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/str_human_transfer"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/grey_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_human_transfer"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/str_phone_number_transfer"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/grey_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/str_content_transfer"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/grey_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="@string/str_number_cash"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xlarge"
                android:background="@color/gray_light"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_cash_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>