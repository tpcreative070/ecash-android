<!--                android:id="@+id/btnOk"-->
<!--                style="@style/btn_submit"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:textSize="@dimen/text_large"-->
<!--                android:text="@string/yes" />-->
